<?xml version="1.0"?>
<rule version="1">
 <pattern>if \( \) { free \( \) ; }</pattern>
 <message>
  <id>redundantCondition</id>
  <severity>style</severity>
  <summary>Redundant condition. It is valid to free a NULL pointer.</summary>
 </message>
</rule>
<rule>
    <pattern><![CDATA[if (\([^()]*(?-1)*[^()]*\)) { }]]></pattern>
    <message>
        <id>EmptyIfStatement</id>
        <severity>style</severity>
        <summary>Empty if statement.</summary>
    </message>
</rule>
